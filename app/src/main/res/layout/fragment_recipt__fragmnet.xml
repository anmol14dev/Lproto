<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/Lproto_red"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/rounded_corner_all">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="40dp"
            android:paddingHorizontal="15dp"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Recipt"
                android:textSize="25sp"
                android:layout_weight="1"
                android:textColor="@color/Lproto_red"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="04 Nov 2020 04:32pm"
                android:textSize="15sp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textColor="@color/Lproto_red"
                android:gravity="end" />
        </LinearLayout>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/paid"
            >
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment method CARD"
            android:textColor="@color/Lproto_red"
            android:textSize="25sp"
            >
        </TextView>
        <View
            android:layout_width="300dp"
            android:layout_height="3dp"
            android:background="@color/Lproto_red" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order details"
                android:textStyle="bold"
                android:layout_marginRight="160dp"
                android:textColor="@color/Lproto_red"
                android:textSize="25sp"
                >
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp"
            android:paddingHorizontal="15dp"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Order id"
                android:textSize="25sp"
                android:layout_weight="1"
                android:textColor="@color/Lproto_red"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="5599786"
                android:textSize="25sp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textColor="@color/Lproto_red"
                android:gravity="end" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5dp"
            android:paddingHorizontal="15dp"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Destination."
                android:textSize="25sp"
                android:layout_weight="1"
                android:textColor="@color/Lproto_red"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Calicut"
                android:textSize="25sp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:textColor="@color/Lproto_red"
                android:gravity="end" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>